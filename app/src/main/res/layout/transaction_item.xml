<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Image_contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/avatar_profile"
        app:shapeAppearanceOverlay="@style/radius" />

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/jua_regular"
        android:text="@string/usuario_guardado"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/date_transacction"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:textColor="@color/blacksuperopacity"
        android:text="@string/fecha_de_transacci_n"
        android:fontFamily="@font/jua_regular"
        android:layout_marginStart="57dp"
        android:layout_marginTop="38dp"
        />

    <TextView
        android:id="@+id/amount_transacction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/jua_regular"
        android:text="@string/valor"
        android:textColor="@color/black"
        android:textSize="16sp" />

</FrameLayout>